<div class="container">
  <div class="row">
    <div class="col-md-5 sign-in-box mx-auto text-center shadow rounded px-0 my-5">
      <h3 class="sign-in py-4"><i class="fas fa-user-plus"></i>プロフィール編集</h3>

      <div class="px-3 py-3 text-left">
        <%= form_with model:@user, local:true do |f| %>

          <div class="form-group">
            <label for="user_name">名前</label><br>
            <%= f.text_field :name, :class => 'form-control'%>
          </div>

          <div class="form-group">
            <label for="user_introduction">自己紹介</label><br>
            <%= f.text_area :introduction, :class =>'form-control'%>
          </div>
          <%= f.submit "変更を保存", class: "btn btn-block btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>