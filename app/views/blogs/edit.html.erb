<div class="container">
  <%= render 'layouts/errors', obj: @blog %>

  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 p-4 px-sm-0 mx-auto">
  		<h1>編集</h1>
      <%= form_with model: @blog, local:true do |f| %>
        <div class="form-group">
           <label class="title">タイトル</label><br>
              <%= f.text_field :title , :class => 'form-control' %>
        </div>
        <div class="form-group">
           <label class="sublect">科目</label><br>
              <%= f.text_field :subject , :class => 'form-control' %>
        </div>
        <div class="form-group">
           <label class="body">感想</label><br>
              <%= f.text_area :body , :class => 'form-control' %>
        </div>
        <div class="form-group">
              <%= f.submit '変更を保存',class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>