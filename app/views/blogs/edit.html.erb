<div class="container">
  <div class="row">
    <div class="col-md-5 sign-in-box mx-auto text-center shadow rounded px-0 my-5">
      <h3 class="sign-in py-4"><i class="fas fa-user-plus"></i>編集</h3>
      <%= render 'layouts/errors', obj: @blog %>
        
      <div class="px-3 py-3 text-left">
        <%= form_with model: @blog, local:true do |f| %>
          <div class="form-group">
            <label class="title">タイトル</label><br>
              <%= f.text_field :title , :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label class="sublect">科目</label><br>
              <%= f.text_field :subject , :class => 'form-control' %>
          </div>
          <div class="form-group">
            <label class="body">感想</label><br>
              <%= f.text_area :body , :class => 'form-control' %>
          </div>
          <%= f.submit '変更を保存',class: "btn btn-block btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>