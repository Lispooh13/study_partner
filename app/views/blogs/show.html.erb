<div class="container p-5 px-sm-0">
  <%#= render 'layouts/errors', obj: @book %>
  <div class="row">
    <div class="col-md-3">
      <h2>ユーザー情報</h2>
        <%= render 'users/info', user: @user %>

       <h2 class="mt-3">学習日記</h2>
        <%= render 'form', blog: @blog %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>詳細</h2>
        <%= link_to @user.name, user_path(@user) %><br>
        <%= link_to @blog.title, blog_path(@blog) %><br>
        科目：<%= @blog.subject %><br>
        感想：<%= @blog.body %><br>
          <% if @user.id == current_user.id %>
           <%= link_to "編集", edit_blog_path(@blog) ,class: "btn btn-sm btn-success edit_book_12180" %>
           <%= link_to "削除", blog_path(@blog), class: "btn btn-sm btn-danger destroy_book_12180", method: :delete ,"data-confirm" => "Are you sure？" %><br>
          <% end %>
    </div>
  </div>
</div>
