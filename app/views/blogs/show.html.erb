<div class="container p-4 px-sm-0">
  <%= render 'layouts/errors', obj: Blog.new %>
  <div class="row">
    <div class="col-md-3">
      <h2>ユーザー情報</h2>
        <%= render 'users/info', user: @user %>

       <h2 class="mt-3">学習日記</h2>
        <%= render 'blogs/form', blog: Blog.new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>詳細</h2>
      <div class="text-right">
        <% if @user.id == current_user.id %>
          <%= link_to "編集", edit_blog_path(@blog) ,class: "btn btn-secondary edit_blog_12180" %>
          <%= link_to "削除", blog_path(@blog), class: "btn btn-danger destroy_blog_12180", method: :delete ,"data-confirm" => "Are you sure？" %><br>
        <% end %>
      </div>

        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
              <th>投稿日</th>
              <th><%= @blog.created_at.strftime("%Y/%m/%d") %></th>
            </tr>
            <tr>
              <th>名前</th>
              <th><%= link_to @user.name, user_path(@user) %></th>
            </tr>
            <tr>
              <th>タイトル</th>
              <th><%= @blog.title %></th>
            </tr>
            <tr>
              <th>科目</th>
              <th><%= @blog.subject %></th>
            </tr>
            <tr>
              <th>感想</th>
              <th><%= @blog.body %></th>
            </tr>
          </tbody>
        </table>

      <div class="comment_index">
        <%= render 'blog_comments/comment_index', blog: @blog %>
      </div>
      <div class="comment">
      <%= render 'blog_comments/comment', blog: @blog, blog_comment: @blog_comment %>
      </div>
    </div>
  </div>
</div>
