<table class="table table-striped">
  <thead>
     <tr>
        <th></th>
        <th>Title</th>
        <th>Subject</th>
        <th></th>
        <th colspan="3"></th>
     </tr>
  </thead>
  <tbody>
    <% blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.user.name, user_path(blog.user) %></td>
        <td><%= link_to blog.title, blog_path(blog) %></td>
        <td><%= blog.subject %></td>
        <td><%= blog.body %></td>
    <% end %>
  </tbody>
</table>