<%= form_with model: blog, url: blogs_path, local:true do |f| %>
  <div class="form-group">
    <label class="title">タイトル</label><br>
      <%= f.text_field :title , :class => 'form-control' ,placeholder: "例：期末テスト、TOEIC等"%>
  </div>
  <div class="form-group">
    <label class="sublect">科目</label><br>
      <%= f.text_field :subject , :class => 'form-control' ,placeholder: "例：英語"%>
  </div>
  <div class="form-group">
    <label class="body">感想</label><br>
      <%= f.text_area :body , :class => 'form-control' ,placeholder: "例：教科書１ページから２０ページまで学習。◯◯が難しかった。"%>
  </div>
  <div class="form-group">
    <%= f.submit '送信',class: "btn btn-success" %>
  </div>
<% end %>
